<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {# Google Schema #}
    <meta itemprop="name" content="{% if metaTitle %}{{ metaTitle }}{{ ' | '}}{% endif %}{% if title %}{{ title }}{{ ' | '}}{% endif %}{% if site.name %}{{ site.name }}{% endif %}">
    <meta itemprop="description" content="{% if excerpt %}{{ excerpt }}{% else %}{{ site.description }}{% endif %}">

    {# Twitter #}
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:url" content="{{ author.url }}">
    <meta name="twitter:title" content="{{ twitter.handle }}">
    <meta name="twitter:description" content="{{ twitter.description }}">
    <meta name="twitter:creator" content="{{ author.name }}">
    <meta name="twitter:image" content="{{ twitter.image }}">

    {# Open Graph #}
    <meta name="og:type" content="website">
    <meta name="og:url" content="{{ author.url }}">
    <meta name="og:title" content="{{ name }}">
    <meta name="og:description" content="{{ description }}">
    <meta name="og:image" content="{{ author.image }}">
    <meta name="og:site_name" content="{{ name }}">
  

    <link rel="stylesheet" type = “text/css“  href="{{ '/css/index.css' }}" />

    <link rel="icon" type="image/x-icon" href="{{ site.baseUrl }}favicon.ico" />

    <title>{% if metaTitle %}{{ metaTitle }}{% else %}{{ title }}{% endif %}{% if metaTitle or title %} | {% endif %}{{ site.name }}</title>


    {% block head %}{% endblock %}
  </head>
  <body>
    {% include 'top-notice.njk' %}
    {% include 'header.njk' %}
    <main>
      {% block body %}{% endblock %}
    </main>
    {% include 'footer.njk' %}
  </body>
</html>
